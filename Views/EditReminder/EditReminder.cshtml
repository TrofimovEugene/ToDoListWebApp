@model ToDoListWebApp.ViewModels.Reminders.ReminderViewModel
@{
}
<h1>Редактировать напоминание</h1>

<div class="container">
    <div class="row d-flex justify-content-center align-items-center" style="height: 80vh">
        <div class="col-4 ">
            <form method="post" asp-controller="EditReminder" asp-action="SaveChangesReminderAsync">
                <div class="card md-3" style="border-color: black">
                    <div class="form-col mx-3">
                        <div class="form-group">
                            <label asp-for="Id" hidden>Id</label>
                            <input type="text" class="form-control" asp-for="Id" hidden/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Header">Заголовок</label>
                            <input type="text" class="form-control" asp-for="Header"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Text">Текст</label>
                            <textarea type="text" class="form-control" asp-for="Text"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReminderDate">Дата напомнинания</label>
                            <input asp-for="ReminderDate" type="datetime-local" class="form-control"/>
                        </div>
                        <div>
                            <label asp-for="StatusNote">Статус</label>
                            <select asp-for="StatusNote" required>
                                <option value="0">Complete</option>
                                <option value="1">Failed</option>
                                <option value="2">Low</option>
                                <option value="3">Medium</option>
                                <option value="4">High</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateCreated">Дата создания</label>
                            <input type="datetime-local" class="form-control" asp-for="DateCreated" disabled="disabled"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateLastChanged">Дата последнего изменения</label>
                            <input type="datetime-local" class="form-control" asp-for="DateLastChanged" disabled="disabled"/>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary " asp-controller="EditNote" asp-action="SaveChangesReminderAsync" value="Сохранить"/>
                            <a type="button" class="btn btn-primary center-button" asp-controller="Index" asp-action="Index">Отмена</a> 
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>